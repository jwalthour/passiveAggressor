<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassiveAggressor"
        xmlns:UI="clr-namespace:PassiveAggressor.UI" x:Class="PassiveAggressor.MainWindow"
        mc:Ignorable="d"
        Title="Passive Aggressor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Margin="0,0,0,0" Background="#FFBFBFBF" Grid.Column="1">
            <StackPanel  x:Name="stackHostList">
                <Label FontStyle="Italic">Listening for hosts...</Label>

            </StackPanel>
        </ScrollViewer>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="49" Width="280" TextWrapping="WrapWithOverflow">This tool will passively listen to network traffic, and list hosts detected on the local network.</TextBlock>
    </Grid>
</Window>
