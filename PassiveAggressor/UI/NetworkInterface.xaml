<UserControl x:Class="PassiveAggressor.UI.NetworkInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassiveAggressor.UI"
             mc:Ignorable="d" 
             d:DesignHeight="88.902" d:DesignWidth="300">
    <Grid Background="White" Margin="4,4,4,9.8">
        <CheckBox x:Name="checkboxListen" Content="Listen on this interface" HorizontalAlignment="Left" Margin="6,52,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Label x:Name="labelDescription" Content="Description" VerticalAlignment="Top"/>
        <Label x:Name="labelIpv4Address" Content="111.222.333.444" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockErrorMessage" Margin="101,31,5,0" TextWrapping="Wrap" Text="Error message" VerticalAlignment="Top" TextAlignment="Right" Foreground="Red"/>

    </Grid>
</UserControl>
