<UserControl x:Class="PassiveAggressor.UI.VisibleHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassiveAggressor.UI"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid Background="White" Margin="4,4,4,0">
        <Image x:Name="imageMfrIcon" HorizontalAlignment="Left" Height="50" Margin="5,5,0,0" VerticalAlignment="Top" Width="50" Source="/PassiveAggressor;component/data/mfrIcons/unknownMfr.png"/>
        <Label x:Name="labelIpV4Address" Content="111.222.333.444" HorizontalAlignment="Left" Margin="60,5,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelMacAddress" Content="AA:BB:CC:DD:EE" HorizontalAlignment="Left" Margin="60,26,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelMfrString" Content="Manufacturer name" Margin="161,5,10,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonHttp" Content="HTTP" HorizontalAlignment="Left" Margin="166,29,0,0" VerticalAlignment="Top" Width="44" Click="ButtonHttp_Click"/>
        <Button x:Name="buttonHttps" Content="HTTPS" HorizontalAlignment="Left" Margin="215,29,0,0" VerticalAlignment="Top" Width="46" Click="ButtonHttps_Click"/>
        <Button x:Name="buttonPutty" Content="PuTTY" HorizontalAlignment="Left" Margin="266,29,0,0" VerticalAlignment="Top" Width="44"/>
        <Button x:Name="buttonFileZilla" Content="FileZilla" HorizontalAlignment="Left" Margin="315,29,0,0" VerticalAlignment="Top" Width="44"/>

    </Grid>
</UserControl>
