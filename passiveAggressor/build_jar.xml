<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project passiveAggressor">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/.."/>
    <property name="dir.jarfile" value="${dir.buildfile}/dist"/>
	<property name="dir.resources" value="${dir.buildfile}/resources" />
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/passiveAggressor.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="passiveAggressor.PassiveAggressor"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.buildfile}/bin"/>
            <fileset dir="${dir.resources}" />
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/jnetpcap-1.4.r1425/jnetpcap.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/commons-cli-1.4/commons-cli-1.4.jar"/>
        </jar>
    </target>
</project>
